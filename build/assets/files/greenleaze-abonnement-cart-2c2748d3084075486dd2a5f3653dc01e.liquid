<script src="{{ 'greenleaze-script.js' | asset_url }}" async></script>
<link href="https://fonts.cdnfonts.com/css/baloo" rel="stylesheet">

{% if product.metafields.greenleaze.disabled != true %}
    <div>
      <div style="margin: 1rem 0">
        <button
          type="button"
          id="btn-abonnement-cart"
          class="btn btn--full btn--status greenleaze-button greenleaze-button-cart"
        >
          <img class="ml-007" src="{{ 'logo-greenleaze-fond-vert.svg' | file_url }}" width="100px" height="auto"/>
        </button>
      </div>
    </div>
  {% assign mode = "cart" %}
  {% render 'greenleaze-abonnement-modal' with mode %}
{% endif %}


<style>
  .greenleaze-button-cart {
    background-color: #0D5537;
    border-color: #0D5537;
    margin-bottom: 10px;
    letter-spacing: 1px;
    text-transform: none;
  }
  .greenleaze-button-cart:hover {
    background-color: #0c402b;
    border-color: #0c402b;
  }
</style>